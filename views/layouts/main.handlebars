<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Get Route</title>
  </head>
  <body>
    <header>
      <div
        class="jumbotron jumbotron-fluid p-2"
        style="background-color:#c67b5c "
      >
        <!--  #89a0af  blue-ish grey shade//-->
        <div
          class="container-fluid d-flex justify-content-between align-items-center">
          <img src="/pics/Get Route-1 (2).png" width="70px" height="70px">
          <div class="row w-100">
            <div class="col-lg-6 col-md-4 col-sm-12">
              <a href="/" style="text-decoration: none; color:  black"><h1 href="/">Get Route</h1></a>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
              <form class="form-inline">
                <div class="input-group">

                  <input
                    type="text"
                    id="searchInput"
                    class="form-control"
                    placeholder="Search"
                    aria-label="Username"
                    aria-describedby="basic-addon1"
                    value="{{search}}"
                  />
                  <div class="input-group-prepend">
                    <span
                      class="input-group-text"
                      id="basic-addon1"
                      style="height:100%"
                      onclick="handleSearch()"
                    >
                      <i class="fa-solid fa-magnifying-glass"></i>
                    </span>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
              {{#if logged_in}}
                <nav class="d-flex justify-content-end align-items-center">
                  <a href="/profile"><button
                      class="btn"
                      href="/profile"
                      id="profile"
                      style="color: black;"
                    >Profile</button></a>
                  <button class="btn" id="logout" style="color: black;">logout</button>

                </nav>
              {{else}}
                <nav>
                  <a href="/login"><button
                      class="btn"
                      href="/login"
                      id="login"
                      style="color: black;"
                    >login</button></a>
                </nav>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </header>
    <main class="container-fluid">
      <div class="container" style="height:80vh; overflow:scroll">
        {{{body}}}
      </div>
    </main>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <div class="footer fixed-bottom" style="height:7vh">
      <p class="content p-4 m-2" style="text-align: center">
        Copyright &copy; 2022 Get Route.</p>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/14f32d138c.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/buyproduct.js"></script>
    <script src="/js/search.js"></script>

  </body>
</html>